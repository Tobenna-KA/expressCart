                    "offers": {
                        "price": "{{result.productPrice}}",
                        "priceCurrency": "{{config.currencyISO}}",
                        {{#ifCond result.productStock '>' 0}}
                        "availability": "https://schema.org/InStock",
                        {{else}}
                        "availability": "https://schema.org/SoldOut",
