<div id="fixed-currency">
	<div>
		<a href="javascript:void(0)" onclick="changeCurrency('KES')" class="fixed kes {{ session.currency }}">KES
			<span> Kenya Shillings </span></a>
	</div>
	<div>
		<a href="javascript:void(0)" onclick="changeCurrency('productPriceCFA')" class="fixed cfa {{ session.currency }}">CFA <span>CFA Francs</span></a>
	</div>
	<div>
		<a href="javascript:void(0)" onclick="changeCurrency('productPriceUSD')" class="fixed usd {{ session.currency }}">USD <span>US Dollars</span></a>
	</div>
	<div>
		<a href="javascript:void(0)" onclick="changeCurrency('productPriceEUR')" class="fixed eur {{ session.currency }}">EUR <span>European Euros</span></a>
	</div>
</div>

<script>
    function changeCurrency(currency) {
        $.ajax({
            method: 'GET',
            url: '/currency/' + currency,
        }).then(() => {
            window.location.reload()
        }).catch(() => {
            alert('Failed to change currency')
        })
    }
</script>