<!-- banner -->
<div class="banner_top" id="home">
	<div class="wrapper_top_w3layouts">

		<div class="header_agileits">
			<div class="logo">
				{{!-- <h1><a class="navbar-brand" href="/"><span>ML</span> <i>Hair</i></a></h1> --}}
				<a class="navbar-brand" href="/">
					<img src="{{@root.config.cartLogo}}" class="ml-logo">
				</a>
			</div>
			<div class="overlay overlay-contentpush">
				<button type="button" class="overlay-close"><i class="fa fa-times" aria-hidden="true"></i></button>

				<nav>
					<ul>
						<li class="nav-item {{#unless searchTerm}}active{{/unless}}"><a class="nav-link" href="/">Home</a></li>
						{{#each menu.items}}
						<li class="nav-item" {{#menuMatch this.title @root.searchTerm}}{{/menuMatch}} {{#menuMatch this.title
							@root.title}}{{/menuMatch}}>
							<a class="nav-link" href="{{this.link}}">{{this.title}}</a>
						</li>
						{{/each}}
					</ul>
				</nav>
			</div>

			<div class="mainBannerButtons">
				<div class="menuToggleButton">
					<button class="button" id="trigger-overlay" type="button">
						<ion-icon name="menu-outline"></ion-icon>
					</button>
				</div>

				<div>
					<a class="button cd-search-trigger" href="#cd-search">
						<span></span>
					</a>
				</div>
				<!--User Account-->
				{{#if @root.session.customerPresent}}
				<div>
					<button class="button dropdown-toggle" type="button" name="submit" id="dropdownMenuButton" value=""
						data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{!-- <i class="fa fa-language" aria-hidden="true"></i> --}}
						<ion-icon name="person"></ion-icon>
					</button>
					<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<li>
							<a class="dropdown-item" href="/customer/account">Account</a>
						</li>
						<li>
							<a class="dropdown-item" href="/customer/logout">Logout</a>
						</li>
					</div>
				</div>
				{{else}}
				<div>
					<button class="button" type="submit" name="submit" id="user_btn" value="">
						{{!-- <i class="fa fa-user" aria-hidden="true"></i> --}}
						<ion-icon name="person-outline"></ion-icon>
					</button>
				</div>
				{{/if}}

				<!-- Language -->
				{{#ifCond @root.config.enableLanguages "!=" false}}
				<div>
					<div class="dropdown">
						<button class="button dropdown-toggle" type="button" name="submit" id="dropdownMenuButton" value=""
							data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{!-- <i class="fa fa-language" aria-hidden="true"></i> --}}
							<ion-icon name="language"></ion-icon>
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							{{#availableLanguages}}
							<li><a class="dropdown-item" href="/lang/{{this}}">{{@root.__ this}}</a></li>
							{{/availableLanguages}}
						</div>
					</div>
				</div>
				{{/ifCond}}

				<!-- cart details -->
				{{#if @root.session.cart}}
				<div>
					<button class="button" id="cart_btn" type="submit" name="submit" value="">
						<i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
						<span class="badge badge-danger" id="cart-count">{{@root.session.totalCartItems}}</span>
					</button>
				</div>
				{{else}}
				<div>
					<button class="button" id="cart_btn" type="submit" name="submit" value="">
						<i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
					</button>
				</div>
				{{/if}}


			</div>


			<div class="clearfix"></div>
		</div>
		<div class="search_w3ls_agileinfo">
			{{!-- <div class="cd-main-header">
				<ul class="cd-header-buttons">
					<li><a class="cd-search-trigger" href="#cd-search"> <span></span></a></li>
				</ul>
			</div> --}}
			<div id="cd-search" class="cd-search">
				<form id="search_form">
					<input class="form-control" name="frm_search" id="frm_search" placeholder="{{ @root.__ " Search shop" }}"
						aria-label="Search" type="search">
				</form>
			</div>
		</div>
		<!-- /slider -->
		{{#ifEquals title 'ML Hair - Shop' }}
		<!--Show only when on landing page-->
		<div class="slider">
			<h1>
				{{!-- {{ solid }} --}}
			</h1>
			<div class="callbacks_container">
				<ul class="rslides callbacks callbacks1" id="slider4">
					<li>
						<div class="banner-top">
							<div class="banner-info-wthree">
							</div>
						</div>
					</li>
					<li>
						<div class="banner-top1">
							<div class="banner-info-wthree">
							</div>
						</div>
					</li>
					<li>
						<div class="banner-top2">
							<div class="banner-info-wthree">
							</div>
						</div>
					</li>
					<li>
						<div class="banner-top3">
							<div class="banner-info-wthree">
							</div>
						</div>
					</li>
				</ul>
			</div>
			<div class="clearfix"> </div>
		</div>
		<!-- //slider -->
		<ul class="top_icons">
			<li><a href="#"><span class="fa fa-facebook" aria-hidden="true"></span></a></li>
			<li><a href="#"><span class="fa fa-twitter" aria-hidden="true"></span></a></li>
			<li><a href="#"><span class="fa fa-linkedin" aria-hidden="true"></span></a></li>
			<li><a href="#"><span class="fa fa-google-plus" aria-hidden="true"></span></a></li>

		</ul>
		{{ else }}
		<!-- /banner_inner -->
		<div class="services-breadcrumb_w3ls_agileinfo">
			<div class="inner_breadcrumb_agileits_w3">

				<ul class="short">
					<li><a href="/">Home</a><i>|</i></li>
					<li>Single</li>
				</ul>
			</div>
		</div>
		<!-- //banner_inner -->
		{{/ifEquals}}
	</div>
</div>
<!-- //banner -->