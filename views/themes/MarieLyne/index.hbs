{{> themes/MarieLyne/front-menu}}
<div class="productsWrapper col-sm-12">
  {{#if filtered}}
    <div class="product-layout product-results col-sm-12">
      {{#ifCond @root.paginateUrl '==' 'category'}}
      <h1>{{ @root.__ "Category" }}: <strong>{{@root.searchTerm}}</strong></h1>
      {{else}}
      <h1>{{ @root.__ "Search results" }}: <strong>{{@root.searchTerm}}</strong></h1>
      {{/ifCond}}
    </div>
  {{else}}
  <div class="skitter skitter-minimalist">
    <ul>
      <li>
        <a href="#cut">
          <img
            src="https://images.pexels.com/photos/950243/pexels-photo-950243.jpeg"
            class="cut"
          />
        </a>
        {{!-- <div class="label_text">
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit.
            <a href="#see-more" class="btn btn-xs btn-warning">See more</a>
          </p>
        </div> --}}
      </li>
      <li>
        <a href="#swapBlocks">
          <img
            src="https://images.pexels.com/photos/3829491/pexels-photo-3829491.jpeg"
            class="swapBlocks"
          />
        </a>
        {{!-- <div class="label_text">
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit.
            <a href="#see-more" class="btn btn-xs btn-warning">See more</a>
          </p>
        </div> --}}
      </li>
      <li>
        <a href="#swapBarsBack">
          <img
            src="https://images.pexels.com/photos/963696/pexels-photo-963696.jpeg"
            class="swapBarsBack"
          />
        </a>
        {{!-- <div class="label_text">
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit.
            <a href="#see-more" class="btn btn-xs btn-warning">See more</a>
          </p>
        </div> --}}
      </li>
    </ul>
  </div>
  <div class="hero-container container-fluid">
    <ul id="autoWidth" class="cs-hidden">
      {{#each results}}
        <li class="item-a">
          <div class="slider-container">
            <div class="box-slider">
              <div class="slider-image">
                {{#if productImage}}
                  <img src="{{this.productImage}}" alt="" />
                {{else}}
                  <img class="img-fluid" src="/uploads/placeholder.png" alt="...">
                {{/if}}
                <!-- Image overlay -->
                <div class="slider-overlay">
                  <!-- Buy now -->
                  <a href="" class="slider-btn">
                    {{ @root.__ "Add to cart" }}
                  </a>
                </div>
              </div>
              <!-- Product DETAILS -->
              <div class="slider-details">
                <!-- Product name -->
                <div class="product-name">
                  {{#if productPermalink}}
                    <a href="/product/{{this.productPermalink}}">
                      {{this.productTitle}}
                    </a>
                  {{else}}
                    <a href="/product/{{this._id}}">
                      {{this.productTitle}}
                    </a>
                  {{/if}}
                  {{!-- <span>New Arrival</span> --}}
                </div>
                {{#if @root.config.showHomepageVariants}}
                  <a 
                    type="button" 
                    data-id="{{this._id}}" 
                    class="btn btn-default btn-circle add-variant-to-cart" 
                    href="google.com" 
                    role="button"
                  >
                    <ion-icon name="cart"></ion-icon>
                  </a>
                {{else}}
                  <a 
                    class="btn btn-default btn-circle add-to-cart" 
                    type="button" 
                    data-id="{{this._id}}"
                    data-link="{{this.productPermalink}}" 
                    role="button"
                  >
                    <ion-icon name="cart"></ion-icon>
                  </a>
                {{/if}}

                <a href="#" class="slider-price"> 
                  {{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}   
                </a>
              </div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}
  <div class="row product-layout">
    {{#ifCond results.length '==' 0}}
      <div class="col-sm-12">
        <p class="text-danger">{{ @root.__ "No products found" }}</p>
      </div>
    {{/ifCond}}
    {{#each results}}
      <div class="{{perRowClass ../config.productsPerRow}}">
        <div class="thumbnail">
          {{#if productPermalink}}
            <div class="product-wrapper">
              <a href="/product/{{this.productPermalink}}">
                <div class="vertical-center img-thumbnail">
                  {{#if productImage}}
                    <img class="img-fluid product-image" src="{{this.productImage}}" alt="...">
                  {{else}}
                    <img class="img-fluid product-image" src="/uploads/placeholder.png" alt="...">
                  {{/if}}
                </div>
              </a>
            </div>
          {{else}}
            <a href="/product/{{this._id}}">
              <div class="vertical-center img-thumbnail">
                {{#if productImage}}
                  <img class="img-fluid" src="{{this.productImage}}" alt="...">
                {{else}}
                  <img class="img-fluid" src="/uploads/placeholder.png" alt="...">
                {{/if}}
              </div>
              
            </a>
          {{/if}}
          <div class="product-info">
            {{#if variants}}
              <div class="col-md-12">
                <h3 class="product-title product-title-home">
                  {{this.productTitle}}
                </h3>
                {{#if @root.config.showHomepageVariants}}
                <select id="productVariant-{{this._id}}" class="productVariant form-control mb-2">
                {{#each variants}}
                  <option value="{{this._id}}" data-price="{{this.price}}">{{this.title}} - {{currencySymbol @root.config.currencySymbol}}{{this.price}}</option>
                {{/each}}
                </select>
                {{else}}
                <h4 class="product-price mp-0 text-center">
                  {{currencySymbol @root.config.currencySymbol}}{{formatAmount variants.0.price}}
                </h4>
                {{/if}}
              </div>
            {{else}}
              <h3 class="product-title product-title-home">
                {{this.productTitle}}
              </h3>
              <h4 class="product-price mp-0">
                {{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}
              </h4>
            {{/if}}
            <p>
              {{#if @root.config.showHomepageVariants}}
              <a class="btn btn-white add-variant-to-cart" data-id="{{this._id}}" role="button">
                <ion-icon name="cart"></ion-icon>
              </a>
              {{else}}
              <a 
                class="btn btn-white add-to-cart" data-id="{{this._id}}" data-link="{{this.productPermalink}}" data-has-variants="{{checkProductVariants this.variants}}" role="button">
                  <ion-icon name="cart"></ion-icon>
                </a>
              {{/if}}
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<input type="hidden" id="itemsPerPage" value="{{productsPerPage}}" >
<input type="hidden" id="pageNum" value="{{pageNum}}">
<input type="hidden" id="totalItemCount" value="{{totalProductCount}}">
<input type="hidden" id="paginateUrl" value="{{paginateUrl}}">
<input type="hidden" id="searchTerm" value="{{searchTerm}}">
<div class="col-md-12">
  <div id="pager" class="d-flex justify-content-center"></div>
</div>

