<div class="productsWrapper col-sm-12">

	{{!-- <div class="col-md-6 shop_right">
		<img src="/{{config.theme}}/images/banner2hair.jpg" alt="">
		<h6>50% off</h6>
	</div> --}}
	<div class="clearfix"></div>
	{{#if filtered}}
	<div class="product-layout product-results col-sm-12">
		{{#ifCond @root.paginateUrl '==' 'category'}}
		<h1>{{ @root.__ "Category" }}: <strong>{{ @root.searchTerm }}</strong></h1>
		{{else}}
		<h1>{{ @root.__ "Search results" }}: <strong>{{@root.searchTerm}}</strong></h1>
		{{/ifCond}}
	</div>
	{{else}}
	<div class="col-md-12 shop_left homeBannerImage">
		<img src="/{{config.theme}}/images/banner3hair.jpg" alt="">
		<div class="bannerText">
			<h4>Order Now</h4>
			<h4>and get up to</h4>
			<h5>40% off</h5>
			<a href="/shop">Shop Now</a>
		</div>
	</div>
	<div class="container-fluid home-container">
		<div id="instagram-cont"></div>
		<div class="row insta-row">
			{{!--
			<script src="https://apps.elfsight.com/p/platform.js" defer></script>
			<div class="elfsight-app-b643200d-63a5-4f19-8087-67bb217de24c"></div> --}}

			{{#each instaFeed}}
			<div class="col-12 col-md-4 col-sm-4 col-xs-12 instacard">
				<div class="instagram-card">
					<div class="card-header">
						<div>
							<a href="{{this.profileUrl}}" target="_blank">
								<img class="user-image" src="{{this.node.thumbnail_src}}" />
								<p class="user-name"> marielyne_beauty </p>
							</a>
						</div>
						<div class="header-button">
							<button class="btn mainBtn goldBtn"> View Profile</button>
						</div>
						{{!-- <p class="time">1h</p> --}}
					</div>
					<div class="card-image">
						<a href="{{this.profileUrl}}" target="_blank">
							<img src="{{this.node.thumbnail_src}}" width="100%" />
						</a>
					</div>
					<div class="card-content">
						<a class="view-more" href="{{this.profileUrl}}" target="_blank">View more on Instagram</a>
						<hr />
						<div class="icons">
							<div>
								<a href="{{this.profileUrl}}" target="_blank">
									<i class="far fa-heart"></i>
								</a>
								<a href="{{this.profileUrl}}" target="_blank">
									<i class="far fa-comment"></i>
								</a>
								<a href="{{this.profileUrl}}" target="_blank">
									<i class="fa fa-inbox"></i>
								</a>
							</div>
							<div>
								<a href="#" target="_blank">
									<i class="fa fa-bookmark-o"></i>
								</a>

							</div>
						</div>
						<strong>
							{{this.node.edge_liked_by.count}} likes
						</strong>
					</div>
				</div>
			</div>
			{{/each}}
		</div>


		<div class="row product-layout home">
			{{#ifCond results.length '==' 0}}
			<div class="col-sm-12">
				<p class="text-danger">{{ @root.__ "No products found" }}</p>
			</div>
			{{/ifCond}}

			{{#ifCond homePageProducts.length '!=' 0}}
			<h2 class="heading2">
				{{ @root.__ "Some Products" }}
			</h2>
			<div class="products-container home">
				{{#each ../homePageProducts}}
				<div class="single-product">
					<div class="product">
						{{#if productPermalink}}
						<div class="image">
							{{#if productImage}}
							<img src="{{this.productImage}}" alt="">
							{{else}}
							<img src="/uploads/placeholder.png" alt="">
							{{/if}}
						</div>
						<div class="quick-view">
							<a href="/product/{{this.productPermalink}}" class="link-product-add-cart">{{ @root.__ "Quick View" }}
								<i class="fa fa-book-open" aria-hidden="true"></i></a>
						</div>
						<div class="product-info">
							<p>
								<a href="/product/{{this.productPermalink}}">{{this.productTitle}} </a>
							</p>
						</div>
						{{else}}
						<div class="image">
							{{#if productImage}}
							<img src="{{this.productImage}}" alt="">
							{{else}}
							<img src="/uploads/placeholder.png" alt="">
							{{/if}}
						</div>
						<div class="quick-view">
							<a href="/product/{{this._id}}" class="link-product-add-cart">{{ @root.__ "Quick View" }} <i
									class="fa fa-book-open" aria-hidden="true"></i></a>
						</div>
						<div class="product-info">
							<p>
								<a href="/product/{{this._id}}">{{this.productTitle}} </a>
							</p>
						</div>
						{{/if}}
						{{#if variants}}
						<div class="price-section">
							{{#if @root.config.showHomepageVariants}}
							<select id="productVariant-{{this._id}}" class="productVariant form-control mb-2">
								{{#each variants}}
								<option value="{{this._id}}" data-price="{{otherVariantPriceValues ../../this}}">
									{{this.title}} - {{currencySymbol @root.config.currencySymbol @root.session}}{{otherVariantPriceValues ../../this}}
								</option>
								{{/each}}
							</select>
							{{else}}
							<div class="cart-section">
								<h4 class="product-price mp-0 text-center">
									{{currencySymbol @root.config.currencySymbol @root.session}}{{shopVariantPriceValues ../this}}
								</h4>
							</div>
							{{/if}}
							<div class="cart-section">
								<div class="cart-button">
									{{#if @root.config.showHomepageVariants}}
									<a class="add-variant-to-cart mainBtn greenBtn" data-id="{{this._id}}" role="button">
										{{ @root.__ "Add to cart" }}
										<i class="fa fa-cart-plus" aria-hidden="true"></i>
									</a>
									{{else}}
									<a class="add-to-cart mainBtn greenBtn" data-id="{{this._id}}" data-link="{{this.productPermalink}}"
										data-has-variants="{{checkProductVariants this.variants}}" role="button">
										{{ @root.__ "Add to cart" }}
										<i class="fa fa-cart-plus" aria-hidden="true"></i>
									</a>
									{{/if}}
								</div>
							</div>
						</div>
						{{else}}
						<div class="price-section">
							<div class="cart-section">
								<h4 class="product-price mp-0 text-center">
									{{currencySymbol @root.config.currencySymbol @root.session}}{{relatedProductsPriceValue ../this}}
								</h4>
								{{!-- <div class="price">
									<span class="money">
										{{currencySymbol @root.config.currencySymbol @root.session}}{{relatedProductsPriceValue ../this}}
									</span>
								</div> --}}
								<div class="cart-button">
									{{#if @root.config.showHomepageVariants}}
									<a class="add-variant-to-cart mainBtn cartBtn greenBtn" data-id="{{this._id}}" role="button">
										{{ @root.__ "Add to cart" }}
										<i class="fa fa-cart-plus" aria-hidden="true"></i>
									</a>
									{{else}}
									<a class="add-to-cart  mainBtn cartBtn greenBtn" data-id="{{this._id}}"
										data-link="{{this.productPermalink}}" data-has-variants="{{checkProductVariants this.variants}}"
										role="button">{{ @root.__ "Add to cart" }}
										<i class="fa fa-cart-plus" aria-hidden="true"></i>
									</a>
									{{/if}}
								</div>
							</div>
						</div>
						{{/if}}
					</div>
				</div>
				{{/each}}
			</div>
			<a href="/shop" class="btn mainBtn greenBtn keepShoppingBtn">
				{{ @root.__ "Keep Shopping" }}</a>
			{{/ifCond}}

		</div>
	</div>
	{{/if}}
	{{> themes/MarieLyne/bottom-carousel}}
</div>
<input type="hidden" id="itemsPerPage" value="{{productsPerPage}}">
<input type="hidden" id="pageNum" value="{{pageNum}}">
<input type="hidden" id="totalItemCount" value="{{totalProductCount}}">
<input type="hidden" id="paginateUrl" value="{{paginateUrl}}">
<input type="hidden" id="searchTerm" value="{{searchTerm}}">
<script
	src="https://www.jqueryscript.net/demo/Instagram-Photos-Without-API-instagramFeed/jquery.instagramFeed.js"></script>
<script>
	(function ($) {
		$(window).on('load', function () {
			$.instagramFeed({
				'username': 'marielyne_beauty',
				'container': "#instagram-cont",
				'display_profile': true,
				'display_biography': true,
				'display_gallery': true,
				'items': 3,
				'items_per_row': 3,
				'margin': 1,
				'display_captions': true,
				callback: function (data) {
					console.log('SOLID')
				}
				//'styling': false
			});
		});
	})(jQuery);
</script>