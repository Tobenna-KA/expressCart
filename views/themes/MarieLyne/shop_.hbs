{{> themes/MarieLyne/front-menu}}
<div class="container">
  <div class="row">

    <div class="col-lg-3">

      <h1 class="my-4">{{@root.config.cartTitle}}</h1>
      <div class="list-group">
        <a href="#" class="list-group-item">Category 1</a>
        <a href="#" class="list-group-item">Category 2</a>
        <a href="#" class="list-group-item">Category 3</a>
      </div>

    </div>

    <!-- SHOW IF NO PRODUCTS -->
    {{#ifCond results.length '==' 0}}
    <div class="col-lg-9">
      <p class="text-danger">{{ @root.__ "No products found" }}</p>
    </div>
    {{/ifCond}}
    <div class="col-lg-9">

      <div class="row">
        {{!-- LOOP THROUGH PRODUCTS --}}
        {{#each results}}
        <div class="col-lg-4 col-md-6 mb-4 store-product">
          <div class="product-wrapper">
            <div class="container">
              <div class="top">
                {{#if productPermalink}}
                <a href="/product/{{this.productPermalink}}">
                  {{#if productImage}}
                  <img src="{{this.productImage}}" alt="">
                  {{else}}
                  <img src="/uploads/placeholder.png" alt="">
                  {{/if}}
                </a>
                {{else}}
                <a href="/product/{{this._id}}">
                  {{#if productImage}}
                  <img src="{{this.productImage}}" alt="">
                  {{else}}
                  <img src="/uploads/placeholder.png" alt="">
                  {{/if}}
                </a>
                {{/if}}
              </div>
              {{#if variants}}
              <div class="bottom">
                <div class="left">
                  <div class="details">
                    {{#if productPermalink}}
                    <a href="/products/{{this.productPermalink}}">
                      {{this.productTitle}}
                    </a>
                    {{else}}
                    <a href="/products/{{this._id}}">
                      {{this.productTitle}}
                    </a>
                    {{/if}}
                    {{#if @root.config.showHomepageVariants}}
                    <select id="productVariant-{{this._id}}" class="productVariant form-control mb-2">
                      {{#each variants}}
                      <option value="{{this._id}}" data-price="{{this.price}}">
                        {{this.title}} - {{currencySymbol @root.config.currencySymbol}}{{this.price}}
                      </option>
                      {{/each}}
                    </select>
                    {{else}}
                    <h4 class="product-price mp-0 text-center">
                      {{currencySymbol @root.config.currencySymbol}}{{formatAmount variants.0.price}}
                    </h4>
                    {{/if}}
                    <p>Â£250</p>
                  </div>
                  <div class="buy">
                    <ion-icon name="cart" style="font-size: 1.5em"></ion-icon>
                  </div>
                </div>
                <div class="right">
                  <div class="done">
                    <ion-icon name="checkmark-done-circle"></ion-icon>
                  </div>
                  <div class="details">
                    <h3>Chair</h3>
                    <p>Added to your cart</p>
                  </div>
                  <div class="remove">
                    <ion-icon name="close-circle"></ion-icon>
                  </div>
                </div>
              </div>
              {{else}}
              <div class="bottom">
                <div class="left">
                  <div class="details">
                    {{#if productPermalink}}
                    <a href="/products/{{this.productPermalink}}">
                      {{this.productTitle}}
                    </a>
                    {{else}}
                    <a href="/products/{{this._id}}">
                      {{this.productTitle}}
                    </a>
                    {{/if}}
                    <p>
                      {{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}
                    </p>
                  </div>
                  <div class="buy">
                    {{#if @root.config.showHomepageVariants}}
                    <a class="add-variant-to-cart" data-id="{{this._id}}" role="button">
                      <ion-icon name="cart"></ion-icon>
                    </a>
                    {{else}}
                    <a class="add-to-cart" data-id="{{this._id}}" data-link="{{this.productPermalink}}"
                      data-has-variants="{{checkProductVariants this.variants}}" role="button">
                      <ion-icon name="cart"></ion-icon>
                    </a>
                    {{/if}}
                  </div>
                </div>
              </div>
              {{/if}}
            </div>
            <div class="inside">
              <div class="icon">
                <ion-icon name="information-circle"></ion-icon>
              </div>
              <div class="contents">
                <h4>
                  {{#if productPermalink}}
                  <a href="/products/{{this.productPermalink}}">
                    {{this.productTitle}}
                  </a>
                  {{else}}
                  <a href="/products/{{this._id}}">
                    {{this.productTitle}}
                  </a>
                  {{/if}}
                </h4>
                <h3>
                  {{currencySymbol @root.config.currencySymbol}}{{formatAmount productPrice}}
                </h3>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
</div>
